{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "*": "ask",
        "bash": {
            "ls *": "allow",
            "true": "allow",
            "echo *": "allow",
            "rg *": "allow",
            "grep *": "allow",
            "git status *": "allow",
            "git diff *": "allow",
            "git --no-pager diff *": "allow",
            "git rev-parse *": "allow",
            "git show *": "allow",
            "gh run view *": "allow",
            "gh run list *": "allow",
        },
        "read": "allow",
        "edit": "allow",
        "grep": "allow",
        "glob": "allow",
        "list": "allow",
        "todowrite": "allow",
        "todoread": "allow",
        "webfetch": "allow",
    },
}
